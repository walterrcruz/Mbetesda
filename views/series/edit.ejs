<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Editar Sermon</h1>
            <div style="width: 80%; margin:40px auto;">
                <form action="/serie/<%= sermon._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="editSermon[title]" value="<%= sermon.title %>"></input>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="editSermon[serie]" value="<%= sermon.serie %>"></input>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="editSermon[imagen]" value="<%= sermon.image %>"></input>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="editSermon[predicador]" value="<%= sermon.predicador %>"></input>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="editSermon[video]" value="<%= sermon.video %>"></input>
                    </div>
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-info btn-block">Submit</button>
                    </div>
                </form>
                <a href="/serie">Go Back</a>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>