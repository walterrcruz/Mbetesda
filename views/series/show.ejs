<% include ../partials/header %>

    <!-- Page Title
		============================================= -->
    <section id="page-title">

        <div class="container clearfix">
            <h1>
                <%= showSermon.title %>
            </h1>

            <a class=" btn btn-success" href="/serie/<%= showSermon._id %>/edit">Edit</a>
            <a class=" btn btn-success" href="/serie">Regresar</a>
            <form id="delete-form" action="/serie/<%= showSermon._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger ">Delete</button>
            </form>
        </div>

    </section>
    <!-- #page-title end -->

    <!-- Content
		============================================= -->
    <section id="content">

        <div class="content-wrap">

            <div class="container clearfix">

                <!-- Portfolio Single Image
                    ============================================= -->


                <div class="col_two_third portfolio-single-image nobottommargin">
                    <iframe width="560" height="315" src="<%= showSermon.video %>" frameborder="0" allowfullscreen></iframe>
                </div>
                <!-- .portfolio-single-image end -->

                <!-- Portfolio Single Content
					============================================= -->
                <div class="col_one_third portfolio-single-content col_last nobottommargin">

                    <!-- Portfolio Single - Description
						============================================= -->
                    <div class="fancy-title title-bottom-border">
                        <h2>
                            <%= showSermon.title %>
                        </h2>
                    </div>
                    <p>
                        <%= showSermon.description %>
                    </p>
                    <!-- Portfolio Single - Description End -->

                    <div class="line"></div>

                    <!-- Portfolio Single - Meta
						============================================= -->
                    <ul class="portfolio-meta bottommargin">
                        <li><span><i class="icon-user"></i>Predicador:</span>
                            <%= showSermon.predicador %>
                        </li>
                        <li><span><i class="icon-calendar3"></i>Publicado: </span>
                            <%= showSermon.date.toDateString() %>
                        </li>

                        <li><span><i class="icon-link"></i>Serie:</span>
                            <a href="#">
                                <%= showSermon.serie %>
                            </a>
                        </li>
                    </ul>
                    <!-- Portfolio Single - Meta End -->

                    <!-- Portfolio Single - Share
						============================================= -->
                    <div class="si-share clearfix">
                        <span>Share:</span>
                        <div>
                            <a href="http://facebook.com/betesdanocc" class="social-icon si-borderless si-facebook">
                                <i class="icon-facebook"></i>
                                <i class="icon-facebook"></i>
                            </a>
                            <a href="http://twitter.com/mbetesda7" class="social-icon si-borderless si-twitter">
                                <i class="icon-twitter"></i>
                                <i class="icon-twitter"></i>
                            </a>
                            <!--
                            <a href="#" class="social-icon si-borderless si-pinterest">
                                <i class="icon-pinterest"></i>
                                <i class="icon-pinterest"></i>
                            </a>
                            <a href="#" class="social-icon si-borderless si-gplus">
                                <i class="icon-gplus"></i>
                                <i class="icon-gplus"></i>
                            </a>
                            <a href="#" class="social-icon si-borderless si-rss">
                                <i class="icon-rss"></i>
                                <i class="icon-rss"></i>
                            </a>
                            -->
                            <a href="email:#" class="social-icon si-borderless si-email3">
                                <i class="icon-email3"></i>
                                <i class="icon-email3"></i>
                            </a>
                        </div>
                    </div>
                    <!-- Portfolio Single - Share End -->

                </div>
                <!-- .portfolio-single-content end -->

                <div class="clear"></div>

                <div class="divider divider-center"><i class="icon-circle"></i></div>


            </div>

        </div>

    </section>
    <!-- #content end -->


    <% include ../partials/footer %>